    },
    "keywords": [
        "cli",
        "command line",
        "opts",
        "parseopt",
        "opt",
        "args",
        "console",
        "argsparse",
        "optparse",
        "autocomplete",
        "command",
        "autocompletion"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/a958330481/std-ide-cli.git"
    },
    "dependencies": {
        "chalk": "^4.1.0",
        "commander": "^7.0.0",
        "download-git-repo": "^3.0.2",
        "fs-extra": "^9.0.1",
        "inquirer": "^7.3.3",
        "mem-fs": "^1.2.0",
        "mem-fs-editor": "^8.0.0",
        "ora": "^5.2.0",
        "shelljs": "^0.8.4"
    },
    "devDependencies": {
        "eslint": "^7.18.0",
        "eslint-config-prettier": "^7.2.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-prettier": "^3.3.1",
        "lint-staged": "^10.5.3",
        "prettier": "^2.2.1",
        "standard-version": "^9.5.0",
        "stylelint": "^13.8.0",
        "stylelint-config-rational-order": "^0.1.2",
        "stylelint-config-standard": "^20.0.0",
        "stylelint-order": "^4.1.0",
